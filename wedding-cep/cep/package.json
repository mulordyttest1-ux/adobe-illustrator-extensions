{
  "name": "wedding-scripter-cep",
  "version": "1.0.0",
  "description": "Wedding Scripter CEP Panel for Adobe Illustrator",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node build.cjs",
    "watch": "node build.cjs --watch",
    "test": "node --test js/**/*.test.js",
    "test:watch": "node --test --watch js/**/*.test.js",
    "lint": "eslint js/ --ignore-pattern bundle.js",
    "dep-check": "depcruise js --config .dependency-cruiser.cjs",
    "dep-graph": "depcruise js --include-only \"^js\" --output-type mermaid > dependency-graph.mmd",
    "test:e2e": "shadow_e2e_cdp.bat"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "esbuild": "^0.24.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0"
  }
}
